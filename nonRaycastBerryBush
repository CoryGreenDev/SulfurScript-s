#pragma strict
private var collider : Capsule Collider;

var inv : Inventory;

private var characterController : CharacterController;

function Update () {
  if(characterController is collider && on.("Berry Bush") {
    if(Input.GetMouseDown(1)) {
      Destroy.gameObject(this);
      inv.Berries ++;
      
    } else {
    Debug.Log("Exception (Berries Line: 12)")
    }
  }
}
